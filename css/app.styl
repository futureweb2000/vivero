@import 'nib'

body
	margin 0

.header
	display flex
	justify-content space-between
	background white
	align-items center
	border-bottom 3px solid #6AAD4A
	position fixed
	flex-direction column
	width 100%
	height 6.2em
	top 0
	z-index 10
	.showNav
		position absolute 
		top 40px 
		right 30px
	
	.nav
		margin 0
		display none
		background white
		border-radius 0 0 10px 10px
		border 1px solid gray
		border-top 0
		
		ul
			display flex
			list-style none
			flex-direction column
			padding 0 20px
			.nav-item
				border-bottom 2px solid green
				padding 10px 0
				a
					text-transform uppercase
					margin 0 .6em
					border-top 3px solid transparent
					padding-top .5em
					transition all .5s
					color #000
					text-decoration none
					&:hover
						border-top-color green
						cursor pointer
					
			
	.logo
		margin 0
		width 11.2em
		flex none
		img
			width 100%
			height 100%
.slide
	margin-top 6.45em
	width 100%
	.head-img
		margin 0
		width 100%
		img
			width 100%
			
.main
	background #efefef
	margin-top 6.45em
	width 100%
	.offer
		background green
		color white
		display flex
		flex-direction column
		justify-content center
		.wrap-item
			margin 0
			display flex
			justify-content center
			flex-wrap wrap
			.description-section
				padding 1em 0
				font-size 2em
				border-bottom 1px solid white
				width 90%
				text-align center
			&-post
				text-align center
				width 280px
				margin 20px 10px
				img 
					width 200px
				&-name
					color #ccc
					font-size 1.6em
					margin .5em 0
				&-description
					font-size 1.2em
					margin 0
			.info-extra
				font-size 1.3em
				padding 1.8rem 0
				border-top 1px solid white
				width 85%
				text-align center

	.products
		background #4B433C
		color white
		display flex
		flex-direction column
		justify-content center
		.wrap-item
			margin 0
			display flex
			justify-content center
			flex-wrap wrap
			.description-section
				padding 1em 0
				font-size 2em
				border-bottom 1px solid white
				width 90%
				text-align center
			.product
				background white
				border-radius .3em .3em 2px 2px 
				border 1px solid gray
				color black
				width 270px
				height 230px
				margin 70px 10px
				
				&-name
					text-align center
					text-transform uppercase
					margin .5em 0
				&-img
					margin 0
					width 100%
					height 100%
					border-top 1px solid gray
					
					img
						width 100%
						height 100%
						padding-bottom -3px
	.our-sh
		background #ccc
		color white
		display flex
		flex-direction column
		justify-content center
		.wrap-item
			margin 0
			display flex
			justify-content center
			flex-wrap wrap
			.description-section
				padding 1em 0
				font-size 2em
				border-bottom 1px solid white
				width 90%
				text-align center
			&-post
				text-align center
				width 280px
				margin 20px 10px
				img 
					width 200px
				&-name
					color #ccc
					font-size 2em
					margin .5em 0
				&-description
					font-size 1.8em
					margin 0
			.info-extra
				font-size 1.3em
				padding 1.8rem 0
				border-top 1px solid white
				width 85%
				text-align center


.triangle-green
	width 35px
	height 35px
	background green
	transform rotate(45deg)
	position relative
	bottom -17px
	margin 0 auto
	z-index 2 //para que se ponga detras del header que tiene z-index 10
	
.triangle-brown
	width 35px
	height 35px
	background #4B433C
	transform rotate(45deg)
	position relative
	bottom -17px
	margin 0 auto
	z-index 2  //para que se ponga detras del header que tiene z-index 10
.triangle-lightgray
	width 35px
	height 35px
	background #ccc
	transform rotate(45deg)
	position relative
	bottom -17px
	margin 0 auto
	z-index 2  //para que se ponga detras del header que tiene z-index 10
	
.wrap-item
	margin 0
	display flex
	justify-content center
	flex-wrap wrap	
	.title-section
		padding 1em 0
		font-size 2em
		border-bottom 1px solid white
		width 90%
		text-align center
		


.footer
	width 100%
	background url('../img/footer2.jpg')
	background-size contain
	display flex
	flex-direction column
	justify-content center
	align-items center
	font-size 1.3em
	
	.contact-ways
		display flex
		justify-content center
		flex-direction column
		margin 0
		font-family sans-serif
		margin-top 20px
		&-item
			text-align center
			margin-top 5px
			&:first-child 
				margin-top 0
			p
				margin 0			
	.redes
		margin 0
		display flex
		.item
			margin 0 15px
			background lightgray
			border-radius 50%
			width 40px
			height 40px
			text-align center
			line-height 40px
			border 1px solid gray
			
	.copy
		color white
		text-align center
		p
			margin 0
			
